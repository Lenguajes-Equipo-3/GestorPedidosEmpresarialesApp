<Window x:Class="GestorPedidosEmpresarialesApp.Views.ProductoBaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GestorPedidosEmpresarialesApp.ViewModel"
        Title="Insertar Producto Base" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:ProductoBaseViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Nombre del Producto -->
        <TextBlock Text="Nombre del Producto:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" />
        <TextBox Text="{Binding Producto.NombreProducto}" Grid.Row="0" Grid.Column="1" Height="30" Margin="0,0,0,10" />

        <!-- Categoría -->
        <TextBlock Text="Categoría:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" />
        <ComboBox ItemsSource="{Binding Categorias}" 
                  SelectedItem="{Binding Producto.Categoria}" 
                  DisplayMemberPath="Descripcion" 
                  Grid.Row="1" Grid.Column="1" 
                  Height="30" Margin="0,0,0,10" />

        <!-- Tabla de Productos Cargados -->
        <DataGrid ItemsSource="{Binding ProductosCargados}" 
          AutoGenerateColumns="False" 
          Grid.Row="2" Grid.ColumnSpan="2" 
          Margin="0,10,0,10" 
          CanUserAddRows="False" 
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProductoBase}" Width="50" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreProducto}" Width="*" />
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Descripcion}" Width="*" />
                <DataGridTemplateColumn Header="Acciones" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Eliminar" 
                            Command="{Binding DataContext.EliminarProductoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            CommandParameter="{Binding}" 
                            Background="#C62828" 
                            Foreground="White" 
                            Width="75" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button Content="Guardar" Command="{Binding GuardarProductoCommand}" Width="100" Margin="0,0,10,0" />
            <Button Content="Cancelar" Click="Cancelar_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>