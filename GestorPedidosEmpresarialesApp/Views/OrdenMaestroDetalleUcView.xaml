<UserControl x:Class="GestorPedidosEmpresarialesApp.Views.OrdenMaestroDetalleUcView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#181B22">
    <UserControl.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#181B22"/>
        <SolidColorBrush x:Key="BgDarker" Color="#12141A"/>
        <SolidColorBrush x:Key="InputBg" Color="#22232A"/>
        <SolidColorBrush x:Key="Accent" Color="#0092FF"/>
        <SolidColorBrush x:Key="TextLight" Color="#D3E0F4"/>
        <Style x:Key="DarkInput" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="#23232b"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4,10,0,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderBrush" Value="#0092FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BgDark}" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FORMULARIO PRINCIPAL -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="40,20,20,0">
            <TextBlock Text="New Sales Order" FontSize="28" FontWeight="Bold" Margin="0,0,0,24"/>
            <TextBlock Text="Client Company" Margin="0,8,0,0"/>
            <TextBox Style="{StaticResource DarkInput}" Text="{Binding ClienteSeleccionado.NombreCompania}" IsReadOnly="True"/>
            <Button Content="Select Client" Style="{StaticResource DarkButton}" Width="160" Margin="0,6,0,16" Command="{Binding BuscarClienteCommand}"/>

            <TextBlock Text="Order Date"/>
            <TextBox Style="{StaticResource DarkInput}" Text="{Binding FechaOrden, StringFormat={}{0:dd/MM/yyyy}}" IsReadOnly="True" TextChanged="TextBox_TextChanged"/>

            <!-- Detalle de la orden -->
            <TextBlock Text="Order Details" FontSize="18" FontWeight="Bold" Margin="0,32,0,12"/>
            <DataGrid ItemsSource="{Binding DetallesOrden}"
                      SelectedItem="{Binding DetalleSeleccionado}"
                      AutoGenerateColumns="False"
                      Background="{StaticResource InputBg}"
                      Foreground="{StaticResource TextLight}"
                      RowBackground="{StaticResource BgDark}"
                      GridLinesVisibility="Horizontal"
                      ColumnHeaderHeight="38"
                      Margin="0,0,0,8"
                      CanUserAddRows="False" 
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Code" Binding="{Binding VarianteProducto.IdVariante}" Width="*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding VarianteProducto.NombreVariante}" Width="1.5*"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding VarianteProducto.PrecioUnitario, StringFormat=C}" Width="1*"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Cantidad}" Width="1*"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding PrecioLinea, StringFormat=C}" Width="1*"/>
                    <DataGridTextColumn Header="Taxes" Binding="{Binding VarianteProducto.Impuesto, StringFormat=C}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Content="Remove Product" Style="{StaticResource DarkButton}" Background="#23232B" Foreground="#F2F2F2" Command="{Binding QuitarProductoCommand}"/>
                <Button Content="Add Product" Style="{StaticResource DarkButton}" Command="{Binding AgregarProductoCommand}"/>
            </StackPanel>
            <TextBlock Text="Notes" Margin="0,30,0,0"/>
            <TextBox Style="{StaticResource DarkInput}" Height="56" Text="{Binding Observaciones}" AcceptsReturn="True"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,26,0,0">
                <Button Content="Cancel" Style="{StaticResource DarkButton}" Background="#23232B" Foreground="#F2F2F2" Command="{Binding CancelarCommand}" />
                <Button Content="Create Order" Style="{StaticResource DarkButton}" Command="{Binding GuardarOrdenCommand}" />
            </StackPanel>
        </StackPanel>

        <!-- RESUMEN DE LA ORDEN -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,50,32,0">
            <TextBlock Text="Order Summary" FontWeight="Bold" FontSize="18" Margin="0,0,0,18"/>
            <StackPanel Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Subtotal" Width="90"/>
                    <TextBlock Text="{Binding SubTotal, StringFormat=C}" HorizontalAlignment="Right"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Impuestos" Width="90"/>
                    <TextBlock Text="{Binding Impuestos, StringFormat=C}" HorizontalAlignment="Right"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="Total" Width="90"/>
                    <TextBlock Text="{Binding TotalPedido, StringFormat=C}" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
            <Button Content="Print Invoice" Style="{StaticResource DarkButton}" Margin="0,18,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
